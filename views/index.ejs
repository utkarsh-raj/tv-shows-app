<!DOCTYPE html>
<html>
    <head>
        <title>Todo App</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"
        integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u"
        crossorigin="anonymous">
        <link rel="stylesheet" href="{% static 'css/styles.css' %}">
    </head>

    <body>


        <nav class="navbar navbar-default">
          <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
              <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
              <a class="navbar-brand" href="#">Movies</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
              <ul class="nav navbar-nav">
                <% var indexLink = "/index/" + userInstance._id; %>
                <li class="active"><a href=<%= indexLink %>>Most Popular <span class="sr-only">(current)</span></a></li>
                <li><a href="#">My Favourites</a></li>
              </ul>
              <% var link = "/search/" + userInstance._id; %>
              <form action=<%= link %> method="POST" class="navbar-form navbar-left">
                <div class="form-group">
                  <input type="text" class="form-control" name="search" placeholder="Search">
                </div>
                <button type="submit" class="btn btn-default">Submit</button>
              </form>
              <ul class="nav navbar-nav navbar-right">
                <li><a href="login">Sign Out</a></li>
              </ul>
              <ul class="nav navbar-nav navbar-right">
                <li><a href="#">Welcome, <%= userInstance["name"] %></a></li>
              </ul>
            </div><!-- /.navbar-collapse -->
          </div><!-- /.container-fluid -->
        </nav>

        <div class="container">
            <% var a = 0; %>
            <% for (a = 0; a < data["tv_shows"].length; a++) { %>
                <div class="row">
                    <div class="col-sm-1"></div>
                    <div class="col-sm-3">
                        <img class="thumbnail" src=<%= data["tv_shows"][a]["image_thumbnail_path"] %>>
                    </div>
                    <div class="col-sm-7">
                        <h1><strong><%= data["tv_shows"][a]["name"] %></strong></h1>
                        <h4><%= data["tv_shows"][a]["network"] %></h4>
                        <br>
                        <br>
                        <strong>Duration:</strong> <%= data["tv_shows"][a]["start_date"] %> - <% if (data["tv_shows"][a]["end_date"] === null) { %> <%= data["tv_shows"][a]["status"] %> <% } else { %> <%= data["tv_shows"][a]["end_date"] %> <% } %>
                        <br>
                        <br>
                        <% var details = "/details/" + userInstance._id + "/" + data["tv_shows"][a]["id"]; %>
                        <a href=<%= details %> class="btn btn-primary">More Details</a>
                        <%var favourites = "/favourites/" + userInstance._id + "/" + data["tv_shows"][a]["id"] + "/" + data["tv_shows"][a]["name"] + "/" + data["tv_shows"][a]["start_date"] + "/" + data["tv_shows"][a]["status"] + "/" + data["tv_shows"][a]["end_date"] + "/" + data["tv_shows"][a]["network"] + "/" + data["tv_shows"][a]["image"]; %>
                        <a href=<%= details %> class="btn btn-primary">Add to Favourites</a>
                    </div>
                    <div class="col-sm-1"></div>
                </div>
                <hr>
            <% } %>
        </div>
    </body>
</html>